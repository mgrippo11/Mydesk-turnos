      </div>
      <h2 class="navbar-text" style="padding-right: 0.8rem;">Ingresá a tu cuenta</h1>
    </nav>
    <!--Login Usuario-->
    <div class="container">
      <form class="form-user" method="POST" action="/login/auth">
        <h1 class="text-center">Ingresá con tu legajo</h1>
        <div class="form-group">
          <label for="legajo">Nº de legajo:</label>
          <input name="legajo" type="text" class="form-control margin-input" name="legajo" id="legajo"
            aria-describedby="emailHelp" required />
          <% if (locals.errors && errors.legajo) { %>
            <div class="text-danger">
              <%= errors.legajo.msg %>
            </div>
            <% } %>
        </div>
        <div class="form-group">
          <label for="password">Contraseña:</label>
          <input name="password" type="password" class="form-control margin-input" name="password" id="password"
            required />
        </div>
        <button class="button" type="submit">Ingresar</button>
        <!--    <a href="./bottomMobileNavbar.html" type="submit" class="button">Enviar</a> -->
      </form>
    </div>
    <script type="text/javascript" src="/scripts/session-start.js"></script>

    <%- include('./general/footer') %>
      <!--Termina Login Usuario-->
  </body>
  </html>